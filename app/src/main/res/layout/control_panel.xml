<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/controlPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:id="@+id/bluetoothControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/btButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth: "
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:background="@color/colorPrimary"
                    android:padding="10dp"
                    android:text="@string/forgetBT"
                    android:textColor="#ffffff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tempControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bluetoothControl"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature: "
                    android:textSize="20sp" />

                <Switch

                    android:id="@+id/tempSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:drawablePadding="10dp"
                    android:includeFontPadding="true"
                    android:paddingLeft="5dp"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:showText="true"
                    android:switchTextAppearance="@style/SwitchTextAppearance"
                    android:thumbTint="@color/colorPrimary"
                    android:trackTint="@color/colorPrimaryDark" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@id/radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_celsius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:onClick="onRadioButtonClicked"
                        android:text="C" />

                    <RadioButton
                        android:id="@+id/radio_fahrenheit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:onClick="onRadioButtonClicked"
                        android:text="F" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/humidControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempControl"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity: "
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/humiditySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:drawablePadding="10dp"
                    android:includeFontPadding="true"
                    android:paddingLeft="5dp"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:showText="true"
                    android:switchTextAppearance="@style/SwitchTextAppearance"
                    android:thumbTint="@color/colorPrimary"
                    android:trackTint="@color/colorPrimaryDark" />
                />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/windControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/humidControl"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind: "
                    android:textSize="20sp" />

                <Switch

                    android:id="@+id/windSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:drawablePadding="10dp"
                    android:includeFontPadding="true"
                    android:paddingLeft="5dp"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:showText="true"
                    android:switchTextAppearance="@style/SwitchTextAppearance"
                    android:thumbTint="@color/colorPrimary"
                    android:trackTint="@color/colorPrimaryDark" />
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/exportControl"
            android:layout_below="@+id/windControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_marginTop="20dp">
           <Button
               android:id="@+id/aboutButton"
               android:layout_width="215dp"
               android:layout_centerHorizontal="true"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:textColor="#ffffff"
               android:background="@color/colorPrimary"
               android:layout_marginTop="10dp"
               android:text="About this app"/>
        </RelativeLayout>
