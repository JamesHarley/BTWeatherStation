<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notifications_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewInsideRange"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert me when temps fall outside this range"
            android:layout_marginTop="30dp"/>


        <EditText
            android:id="@+id/editText"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_below="@id/textViewInsideRange"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_below="@id/textViewInsideRange"
            android:layout_toRightOf="@id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:layout_toRightOf= "@id/editText"
            android:layout_below="@id/textViewInsideRange"/>
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:theme="@style/AppTheme.Buttons"
           android:layout_toRightOf="@id/editText2"
            android:layout_below="@id/textViewInsideRange"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>